<h1>Show Page</h1>

<% @restaurant.attributes %>

<div>
	<h3>Name: <%= @restaurant.name %></h3>
	<h3>Opening Hours: <%= @restaurant.opening_hours %></h3>
	<h3>Address: <%= @restaurant.address.street %>, <%= @restaurant.address.suburb%></h3> 


<hr> 

<h2>Reviews</h2>
<% @restaurant.reviews.each do |review| %>
	<div>
		<h3>Id: <%= review.id %></h3>
		<h3>Description: <%= review.description %></h3>
		<h3>Stars: <%= review.stars %></h3>
	</div>
<% end %>
<%= link_to "Back", restaurants_path %>
</div>

